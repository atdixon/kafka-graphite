    <profiles>
        <profile>
            <id>deploy-rpm</id>
            <build>
                <plugins>
                    <!-- build standalone rpm with kafka graphite jars. -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>
                        <version>2.1.3</version>
                        <executions>
                            <execution>
                                <id>kafka-graphite-jars-rpm</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>attached-rpm</goal>
                                </goals>
                                <configuration>
                                    <group>Applications/System</group>
                                    <!-- rpm artifact/install name -->
                                    <name>kafka-graphite-jars</name>
                                    <!-- rpm artifact/install version -->
                                    <projversion>${project.version}</projversion>
                                    <classifier>rpm</classifier>
                                    <mappings>
                                        <mapping>
                                            <!-- install into /opt/kafka-graphite-jars -->
                                            <directory>/opt/kafka-graphite-jars</directory>
                                            <filemode>755</filemode>
                                            <username>buzzuser</username>
                                            <groupname>buzzuser</groupname>
                                            <!-- include artifact -->
                                            <artifact/>
                                            <!-- also include -->
                                            <dependency>
                                                <includes>
                                                    <include>com.yammer.metrics:metrics-graphite</include>
                                                </includes>
                                            </dependency>
                                        </mapping>
                                    </mappings>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin> <!-- deploy rpm to yum -->
                        <groupId>com.bazaarvoice.maven.plugins</groupId>
                        <artifactId>s3repo-maven-plugin</artifactId>
                        <version>3.5</version>
                        <executions>
                            <execution>
                                <phase>package</phase> <!-- use package phase, don't require deploy -->
                                <goals>
                                    <goal>create-update</goal>
                                </goals>
                                <configuration>
                                    <s3RepositoryPath>${provided.target.s3RepositoryPath}</s3RepositoryPath>
                                    <createrepoOpts>--simple-md-filenames --no-database</createrepoOpts>
                                    <ignoreVerificationFailures>true</ignoreVerificationFailures>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>${project.groupId}</groupId>
                                            <artifactId>${project.artifactId}</artifactId>
                                            <version>${project.version}</version>
                                            <type>rpm</type>
                                            <classifier>rpm</classifier>
                                            <!-- nicety: use explicit basename so we don't see this pom version -->
                                            <targetBaseName>kafka-graphite-jars-${project.version}</targetBaseName>
                                            <targetSubfolder>kafka-graphite-jars</targetSubfolder>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
